{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev", 
  "framework": "nextjs",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "github": {
    "autoDeployments": true,
    "autoJobCancelation": true,
    "silent": false
  },
  "functions": {
    "app/api/upload/route.ts": {
      "maxDuration": 30
    },
    "app/api/blob/route.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/((?!api|_next|_static|favicon.ico|icon-192x192.png|auth).*)",
      "destination": "/families/$1",
      "has": [
        {
          "type": "host",
          "value": "(?<family>(?!www)[^.]+)\\.kinjar\\.com"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}